generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Food {
  id          Int     @id @default(autoincrement())
  name        String
  description String
  price       Float
  image       String
  category    String
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  password  String
  cartData  Json?   @default("{}") // Guardamos como JSON en lugar de Object
}

model Order {
  id       Int      @id @default(autoincrement())
  userId   Int
  items    Json
  amount   Float
  address  Json
  status   String   @default("Food Processing")
  date     DateTime @default(now())
  payment  Boolean  @default(false)
}
